<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="#5FD3E3"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_marker_title"
        android:layout_width="340dp"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:gravity="bottom"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:onClick="markerFuncNavigation"
            android:src="@drawable/icon_marker_navigation" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_divider" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:onClick="markerFunc360cam"
            android:src="@drawable/icon_marker_360cam" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_divider" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:onClick="markerFuncCallTaxi"
            android:src="@drawable/icon_marker_taxi" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_divider" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:onClick="markerFuncComments"
            android:src="@drawable/icon_marker_comments" />
    </LinearLayout>

    <ImageView
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
        android:background="#5FD3E3"
        android:gravity="center"
        android:onClick="markerFuncZoomIn"
        android:src="@drawable/icon_marker_imh" />

</LinearLayout>